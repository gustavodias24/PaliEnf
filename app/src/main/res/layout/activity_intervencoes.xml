<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        tools:context=".IntervencoesActivity">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informações das Intervenções"
            android:textColor="@color/azul"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/dataHoraResolvido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data/Hora da resolução do diagnóstico"
                android:inputType="number"
                app:mask="##/##/#### às ##:##" />

            <Button
                android:id="@+id/botao_resolvido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="@color/azul"
                android:gravity="center|center_horizontal"
                android:text="resolvido"
                android:textAllCaps="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>